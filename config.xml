<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "https://apps.bsdevtech.com"
    id          = "com.bsdevtech.apps"
    versionCode = "1"
    version     = "1.0.1" >

<!-- versionCode is optional and Android only -->

    <name>Financial Manager</name>

    <description>
        The app for making informed financial decisions. Making you to be more financially inclusive
    </description>

    <author href="http://apps.bsdevtech.com" email="isaiahtech1@gmail.com">
        Engr. Isaiah Pius
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <!-- <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform> -->
    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="splashscreen/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="splashscreen/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="splashscreen/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="splashscreen/splash-land-xhdpi.png" density="land-xhdpi"/>

        <splash src="splashscreen/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="splashscreen/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="splashscreen/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="splashscreen/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>
    <preference name="SplashScreenDelay" value="3000" />

    <plugin name="cordova-plugin-admobpro" source="pgb" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    <icon src="fin_manager.png" />
</widget>